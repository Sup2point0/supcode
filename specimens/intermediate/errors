spec code { ver = 5.4 | syn = utinax | sty = full }

enable sys


try {
  evoke
evade |
  sys.out("an error occurred")
end |
  sys.out("terminating")
}


create func {
  define divide(x, y) {
    if y = 0 {
      evoke deflux.zerodiv
    else |
      func.out(x / y)
    }
  }
}

try {
  sys.out(divide(2, 0))
evade deflux.zerodiv |
  sys.out(deflux.zerodiv)
evade any |
  sys.out("an error occurred")
evade none |
  sys.out("successfully executed")
}
