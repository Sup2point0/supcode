\ account system
\ supcode specimen

spec code { ver = 5.4 | syn = utinax | sty = stan }

enable sys


set 'data' = ['sup' = "4761"]
set 'username' = none
set 'password' = none

set 'action' = none
set 'state' = false
prompt.open()

on start loop forever {{

  prompt.out("""
    what would you like to do?
    - type 'login' to access an existing account
    - type 'create' to register a new account
    - type 'exit' to exit the program
  """)
  prompt.in(action)

  if action = "login" {
    loop until state {
      set username = prompt.ask("enter a username")
      if sys.key(username) in database.keys {
        set state = true
      else |
        prompt.out("username not found")
      }
    } set state = false
    
    loop until state {
      set password = prompt.ask("enter the password")
      if password = data#sys.key(username) {
        set state = true
      else |
        prompt.out("incorrect password")
      }
    } set state = false
    prompt.out("successfully logged in to `username`")

  elif action = "create" |
    loop until state {
      set username = prompt.out("enter a username")
      if sys.key(username) in database.keys {
        prompt.out("username already exists")
      else |
        set state = true
      }
    } set state = false
    
    loop until state {
      password = prompt.ask("enter a password")
      if password != prompt.ask("confirm password") {
        prompt.out("passwords do not match")
      else |
        set state = true
    } set state = false
    set data#sys.key(username) = password
    prompt.out("account successfully created")

  elif action = "exit" |
    sys.exit()

  }

}}
