spec code { ver = 5.3 | syn = utinax | sty = full }

enable sys


try {
  evoke
evade |
  sys.out("an error occurred")
end |
  sys.out("terminating")
}


create func {
  define divide(x, y) {
    if y = 0 {
      evoke sys.error(deflux.zerodiv)
    else |
      func.out(x / y)
    }
  }
}

try {
  sys.out(divide(2, 0))
evade sys.error(deflux.zerodiv) |
  sys.out(sys.error(deflux.zerodiv))
evade any |
  sys.out("an error occurred")
evade none |
  sys.out("successfully executed")
}
